rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection - users can only read/write their own document
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Goals collection - users can only access their own goals
    match /goals/{goalId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Micro-actions collection - users can only access their own actions
    match /micro_actions/{actionId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Daily logs collection - users can only access their own logs
    match /daily_logs/{logId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // Tips collection - read for all authenticated, create for seeding
    match /tips/{tipId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated(); // For initial seeding
      allow update, delete: if false; // Admin only
    }

    // Goal templates collection - read for all authenticated, write for seeding
    match /goal_templates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // For seeding (remove after)
    }
  }
}
